<div style="display: flex">
    <form class="good_form" action="engine/server.php?action=addGood" method="post" enctype="multipart/form-data">
        <h1 class="good_form__item">Загрузить новый товар</h1>
        <label>Название: <input class="good_form__item" type="text" name="goodName" required></label><br>
        <label>Цена: <input class="good_form__item good_form__item_price" type="number" name="goodPrice" required></label><br>
        <label>Краткое описание: <input class="good_form__item" type="text" name="goodInfo" required></label><br>
        <p>Описание: </p>
        <textarea class="good_form__item" name="goodFullInfo" cols="60" rows="10" required></textarea><br>
        <input class="good_form__item" type="file" name="photo" accept="image/*"><br>
        <input class="good_form__item" type="submit" value="Загрузить">
    </form>
    {% if status %}
    <h1>Товар успешно загружен!</h1>
    <?php
        elseif((int)$_GET['status'] == 2 || (int)$_GET['changeStatus'] == 2 || (int)$_GET['delStatus'] == 2):?>
    <h1>Что то пошло не так, попробуйте снова!</h1>
    <?php
        elseif((int)$_GET['changeStatus'] == 1):?>
    <h1>Товар успешно изменен!</h1>
    <?php
        elseif((int)$_GET['delStatus'] == 1):?>
    <h1>Товар успешно удален!</h1>
    {% endif %}
</div>

<form class="filter" action="index.php?c=catalog" method="post">
    <div>
        <select class="filter__gender_select" name="gender">
            <option value="none" selected>Пол</option>
            <option value="1">Женский</option>
            <option value="2">Мужской</option>
            <option value="3">Унисекс</option>
        </select>
    </div>
    <div class="filter__category">
        <select class="filter__category_select" name="gCategory">
            <option value="none" selected>Категория</option>
            <option value="1">Одежда</option>
            <option value="2">Аксессуары</option>
            <option value="3">Обувь</option>
            <option value="4">Рюкзаки и сумки</option>
        </select>
    </div>
    <input class="filter__btn" type="submit" value="Подобрать">
</form>

{% if data == null %}
<h3>Извините, на данный момент нет товаров удовлетворяющих данным критериям.</h3>
{% endif %}
<ul class="catalog" id="catalog__list">
    {% for item in data %}
    <li class="catalog__item" id="{{ item.id }}">
        <img height="230" src="public/images/goods/{{ item.img }}" alt="photo">
        <div class="catalog__info">
            <p class="catalog__link">Название товара:&nbsp; {{ item.name }}</p>
            <p class="catalog__price">Цена:&nbsp; {{ item.price }}руб.</p>
            <p>Краткая информация:&nbsp; {{ item.info }}</p>
            <p class="catalog__gender">Пол:&nbsp; {{ item.gen_name }}</p>
            <p>Категория:&nbsp; {{ item.good_cat_name }}</p>
            <button onclick="changeForm({{ item.id }})" style="margin: 10px 0">Изменить</button><br>
            <button onclick="deleteGood({{ item.id }})">Удалить</button>
        </div>
    </li>
    {% endfor %}
</ul>
{% if maxPage > 1 %}
<button page="1" max_page="{{ maxPage }}" gcat="{{ gCat }}" gen="{{ gen }}" uid="{{ uid }}" sid="{{ sid }}" admin="1" class="catalog__show_btn" id="showmore-button">Показать ещё</button>
{% endif %}
<script src="public/js/showMoreGoods.js"></script>
<script src="public/js/deleteGood.js"></script>
<script src="public/js/changeGood.js"></script>
